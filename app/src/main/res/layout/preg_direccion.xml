     <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/estadisticas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="Salir"
                tools:context=".MainActivity" >
                
                <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" >

                <LinearLayout
                android:id="@+id/layDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical" >
                
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                
                <TextView
                android:id="@+id/textPreguntaCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PREGUNTA_CALLE"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#002266"
                android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editPreguntacalle"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:hint="calle"
                        android:focusable="false"
                        android:inputType="text"
                        android:textSize="16sp" />

                        <Button
                            android:id="@+id/btnCalle"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:onClick="calle"
                            android:text="No contestó" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPreguntaExt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/PREGUNTA_EXTERIOR"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#002266"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editPreguntaExterior"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:hint="N° Exterior"
                        android:focusable="false"
                        android:inputType="text"
                        android:textSize="16sp" />

                        <Button
                            android:id="@+id/btnExterior"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:onClick="exterior"
                            android:text="No contestó" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPreguntaInterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/PREGUNTA_INTERIOR"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#002266"
                        android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editPreguntaInterior"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:hint="N° Interior"
                        android:focusable="false"
                        android:inputType="text"
                        android:textSize="16sp" />

                            <Button
                                android:id="@+id/btnInterior"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="30dp"
                                android:onClick="interior"
                                android:text="No contestó" />

                        </LinearLayout>

                    <TextView
                    android:id="@+id/textPreguntaManzana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/PREGUNTA_MANZANA"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#002266"
                    android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editPreguntaManzana"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:hint="Manzana"
                        android:focusable="false"
                        android:inputType="text"
                        android:textSize="16sp" />

                                <Button
                                    android:id="@+id/btnManzana"
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginBottom="30dp"
                                    android:onClick="manzana"
                                    android:text="No contestó" />

                            </LinearLayout>

                    <TextView
                        android:id="@+id/textPreguntaLote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/PREGUNTA_LOTE"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#002266"
                        android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editPreguntaLote"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:ems="10"
                        android:hint="Lote"
                        android:focusable="false"
                        android:inputType="text"
                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/btnLote"
                                        android:layout_width="125dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="30dp"
                                        android:layout_marginBottom="30dp"
                                        android:onClick="lote"
                                        android:text="No contestó" />

                                </LinearLayout>

</LinearLayout>
</LinearLayout>
</ScrollView>
</RelativeLayout>
