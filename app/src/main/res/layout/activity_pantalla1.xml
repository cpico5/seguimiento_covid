<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Salir"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1075dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                   <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Punto: "
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/txtSeccion"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textSize="16sp" />


                    </LinearLayout>

            </LinearLayout>

            <!-- /////////////////////////////////////// Desde aquí empiezan las preguntas -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textPreguntaEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:text="Buenos días, mi nombre es _____________________, vengo de parte de la Doctora Claudia Sheinbaum Jefa de Gobierno de la Ciudad de México a entregarle información importante para enfrentar esta pandemia; ¿me permitiría realizarle 3 preguntas?, solo le tomarán 2 minutos de su tiempo."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </LinearLayout>



            <!-- /////////////////////////////////////// -->

            <include layout="@layout/preg01"/>
            <include layout="@layout/preg_datos_sospechoso"/>
            <include layout="@layout/preg_direccion"/>
            <include layout="@layout/preg02" />
            <include layout="@layout/preg_datos_sospechoso2"/>
            <include layout="@layout/preg_direccion2"/>
            <include layout="@layout/preg03"/>
            <include layout="@layout/preg_telefono"/>
            <include layout="@layout/preg_urgente"/>
            <include layout="@layout/preg_observaciones"/>
            <include layout="@layout/preg_genero"/>

<!--            <include layout="@layout/socioeconomicos" />-->

            <TextView
                android:id="@+id/textPreguntaSalida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginTop="30dp"
                android:text="Le dejamos este material con información importante para el cuidado de usted y su familia en esta contingencia sanitaria. Es importante que lo lea y lo tenga a la mano. Gracias por su atención, hasta luego."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <include layout="@layout/abandono" />


            <ProgressBar
                android:id="@+id/login_progressMain"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />


            <!-- //////////////////////////////////////  BOTONES  /////////////// -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnGuardar"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/gradient_box"
                            android:minWidth="80dp"
                            android:minHeight="60dp"
                            android:onClick="guardar"
                            android:text="    Guardar    "
                            android:textColor="@color/BLANCO" />

                        <Button
                            android:id="@+id/btnSalir"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/gradient_box"
                            android:minWidth="80dp"
                            android:minHeight="60dp"
                            android:onClick="Salir"
                            android:text="Salir"
                            android:textColor="@color/BLANCO" />


                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>